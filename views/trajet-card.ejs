<div class="trajet-card">
  <div class="trajet-info">  
    <div class="wrapper" style="max-width: 400px;margin: auto;margin-bottom: 30px;">
      <div class="col-12" style="display: flex;align-items: center;">
          <div class="row" style="margin-right: auto;margin-left: auto;">
              <div class="col-12">
                <img class="rounded-circle mx-auto d-block" src="/images/profil.jpg" width="80" height="80"/>
              </div>
              <div class="col-12">
                <div>
                  <h2><%=trajet.passager.prenom%> <%=trajet.passager.nom%></h2>
                </div>
              </div>
            </div>
      </div>
    </div>

    <div class="row">
      <div class="col-5">
        <h4 style="text-align: center;"><%=trajet.lieu_depart.ville%></h4>
      </div>
      <div class="col-2">
        <!-- <h2><i class="fas fa-car-side"></i></h2> -->
        <h4 style="text-align: center;">-</h4>
      </div>
      <div class="col-5">
        <h4 style="text-align: center;"><%=trajet.lieu_arrivee.ville%></h4>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td style="padding-left: 30px;"><i class="fas fa-car-side"></i> <%=trajet.lieu_depart.adresse%>, <%=trajet.lieu_depart.cp%> <%=trajet.lieu_depart.ville%></td>
              <td><i class="fas fa-flag-checkered"></i> <%=trajet.lieu_arrivee.adresse%>, <%=trajet.lieu_arrivee.cp%> <%=trajet.lieu_arrivee.ville%></td>
            </tr>
            <tr>
              <td style="padding-left: 30px;"><i class="far fa-calendar"></i> <%= moment(trajet.date, "DD/MM/YYYY hh").format('dddd DD MMMM yyyy Ã  hh:mm') %></td>
              <td><i class="fas fa-male"></i> <%=trajet.nombrePassagers%><%if(trajet.nombrePassagers > 1){%> passagers<%}else{%> passager<%}%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>